<idea-plugin>
    <id>com.bamuel.spllang</id>
    <name>Pronto 4GL SPL Language Support</name>
    <version>1.2</version>
    <vendor email="me@bamuel.com" url="https://bamuel.com">Bamuel</vendor>
    <depends>com.intellij.modules.platform</depends>
    <description>
        This plugin provides basic support for 4GL scripts for Pronto Xi ERP within JetBrains IDEs.
        Features include:
        - Syntax highlighting for SPL keywords, comments, strings, and numbers.
        - File type recognition for .spl, .op7, .enq, .pcs, .err files.
    </description>

    <change-notes>
        <![CDATA[
            <ul>
              <li><b>1.2</b> Added Support for new file created</li>
              <li><b>1.1</b> Slightly better syntax highlighting and added Line/Block Comments</li>
              <li><b>1.0</b> Initial release with basic syntax highlighting and file type recognition for SPL files.</li>
            </ul>
        ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="SPL File" implementationClass="com.bamuel.spllang.SPLFileType" fieldName="INSTANCE" language="SPL" extensions="spl"/>
        <lang.parserDefinition language="SPL" implementationClass="com.bamuel.spllang.SPLParserDefinition"/>
        <lang.syntaxHighlighterFactory language="SPL" implementationClass="com.bamuel.spllang.SPLSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.bamuel.spllang.SPLColorSettingsPage"/>
        <lang.commenter language="SPL" implementationClass="com.bamuel.spllang.SPLCommenter"/>
        <fileType name="OP7 File" implementationClass="com.bamuel.spllang.OP7FileType" fieldName="INSTANCE" language="OP7" extensions="op7"/>
        <fileType name="ENQ File" implementationClass="com.bamuel.spllang.ENQFileType" fieldName="INSTANCE" language="ENQ" extensions="enq"/>
        <fileType name="PCS File" implementationClass="com.bamuel.spllang.PCSFileType" fieldName="INSTANCE" language="PCS" extensions="pcs"/>
        <fileType name="ERR File" implementationClass="com.bamuel.spllang.ERRFileType" fieldName="INSTANCE" language="ERR" extensions="err"/>
    </extensions>

    <actions>
        <group id="SPL.NewFileGroup" text="New SPL File" description="Create a new 4GL Pronto file">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </group>

        <action id="SPL.NewFileSPL" class="com.bamuel.spllang.SPLFileAction" text="New SPL File" description="Create a new SPL file" icon="/icons/4GLProntoIco.png">
            <add-to-group group-id="SPL.NewFileGroup" anchor="first"/>
        </action>
        <action id="SPL.NewFileENQ" class="com.bamuel.spllang.ENQFileAction" text="New ENQ File" description="Create a new ENQ file" icon="/icons/4GLProntoIcoEnq.png">
            <add-to-group group-id="SPL.NewFileGroup" anchor="last"/>
        </action>
        <action id="SPL.NewFilePCS" class="com.bamuel.spllang.PCSFileAction" text="New PCS File" description="Create a new PCS file" icon="/icons/4GLProntoIcoPCS.png">
            <add-to-group group-id="SPL.NewFileGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
